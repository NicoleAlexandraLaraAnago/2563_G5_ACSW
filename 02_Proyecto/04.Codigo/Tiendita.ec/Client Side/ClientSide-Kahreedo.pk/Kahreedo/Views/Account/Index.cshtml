@model Khareedo.Models.Customer
@{
    ViewBag.Title = "Index";
}
  <!-- Cart view section -->
    <section id="aa-myaccount">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="aa-myaccount-area">
