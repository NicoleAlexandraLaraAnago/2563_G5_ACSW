            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>

            <dt>
                <label>Codigo Postal:</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PostalCode)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
